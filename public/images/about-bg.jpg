<svg width="1920" height="1080" viewBox="0 0 1920 1080" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="aboutGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#fef7f0;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#fef3ec;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#fed7aa;stop-opacity:1" />
    </linearGradient>
    <pattern id="hexagons" width="60" height="52" patternUnits="userSpaceOnUse">
      <polygon points="30,4 50,15 50,37 30,48 10,37 10,15" fill="none" stroke="rgba(251,146,60,0.1)" stroke-width="1"/>
    </pattern>
  </defs>
  
  <!-- Background -->
  <rect width="100%" height="100%" fill="url(#aboutGradient)"/>
  
  <!-- Hexagon pattern -->
  <rect width="100%" height="100%" fill="url(#hexagons)"/>
  
  <!-- Team/collaboration elements -->
  <g opacity="0.08">
    <!-- People icons -->
    <g transform="translate(300, 300)">
      <circle cx="0" cy="0" r="25" fill="#f97316"/>
      <rect x="-20" y="15" width="40" height="30" rx="8" fill="#f97316"/>
    </g>
    
    <g transform="translate(400, 280)">
      <circle cx="0" cy="0" r="25" fill="#f97316"/>
      <rect x="-20" y="15" width="40" height="30" rx="8" fill="#f97316"/>
    </g>
    
    <g transform="translate(500, 320)">
      <circle cx="0" cy="0" r="25" fill="#f97316"/>
      <rect x="-20" y="15" width="40" height="30" rx="8" fill="#f97316"/>
    </g>
    
    <!-- Connection lines -->
    <line x1="325" y1="315" x2="375" y2="295" stroke="#f97316" stroke-width="2"/>
    <line x1="425" y1="295" x2="475" y2="335" stroke="#f97316" stroke-width="2"/>
  </g>
  
  <!-- Abstract elements -->
  <circle cx="1400" cy="200" r="120" fill="rgba(251,146,60,0.06)" opacity="0.7"/>
  <circle cx="200" cy="800" r="80" fill="rgba(251,146,60,0.05)" opacity="0.6"/>
  <polygon points="1200,700 1300,800 1100,800" fill="rgba(251,146,60,0.04)" opacity="0.5"/>
  
  <!-- Floating elements -->
  <rect x="1500" y="600" width="60" height="60" rx="8" fill="rgba(251,146,60,0.08)" opacity="0.4" transform="rotate(30 1530 630)"/>
  <rect x="800" y="150" width="40" height="40" rx="6" fill="rgba(251,146,60,0.06)" opacity="0.3" transform="rotate(-15 820 170)"/>
</svg>