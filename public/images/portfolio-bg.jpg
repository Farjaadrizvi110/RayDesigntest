<svg width="1920" height="1080" viewBox="0 0 1920 1080" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="portfolioGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#f0f9ff;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#e0f2fe;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#bae6fd;stop-opacity:1" />
    </linearGradient>
    <pattern id="squares" width="50" height="50" patternUnits="userSpaceOnUse">
      <rect x="0" y="0" width="25" height="25" fill="rgba(14,165,233,0.05)"/>
      <rect x="25" y="25" width="25" height="25" fill="rgba(14,165,233,0.05)"/>
    </pattern>
  </defs>
  
  <!-- Background -->
  <rect width="100%" height="100%" fill="url(#portfolioGradient)"/>
  
  <!-- Checkered pattern -->
  <rect width="100%" height="100%" fill="url(#squares)"/>
  
  <!-- Portfolio/showcase elements -->
  <g opacity="0.1">
    <!-- Browser windows -->
    <g transform="translate(200, 200)">
      <rect x="0" y="0" width="200" height="140" rx="8" fill="#0ea5e9" stroke="#0284c7" stroke-width="2"/>
      <rect x="0" y="0" width="200" height="30" rx="8" fill="#0284c7"/>
      <circle cx="15" cy="15" r="4" fill="#ef4444"/>
      <circle cx="30" cy="15" r="4" fill="#f59e0b"/>
      <circle cx="45" cy="15" r="4" fill="#10b981"/>
      <rect x="10" y="40" width="180" height="90" rx="4" fill="#ffffff"/>
    </g>
    
    <!-- Mobile screens -->
    <g transform="translate(500, 180)">
      <rect x="0" y="0" width="80" height="160" rx="12" fill="#0ea5e9" stroke="#0284c7" stroke-width="2"/>
      <rect x="10" y="20" width="60" height="120" rx="6" fill="#ffffff"/>
    </g>
    
    <!-- Design elements -->
    <g transform="translate(800, 220)">
      <rect x="0" y="0" width="120" height="100" rx="8" fill="#0ea5e9" stroke="#0284c7" stroke-width="2"/>
      <rect x="10" y="10" width="100" height="20" rx="4" fill="#ffffff"/>
      <rect x="10" y="40" width="80" height="15" rx="3" fill="#ffffff"/>
      <rect x="10" y="65" width="60" height="15" rx="3" fill="#ffffff"/>
    </g>
    
    <!-- Gallery grid -->
    <g transform="translate(1200, 200)">
      <rect x="0" y="0" width="40" height="40" rx="4" fill="#0ea5e9"/>
      <rect x="50" y="0" width="40" height="40" rx="4" fill="#0ea5e9"/>
      <rect x="100" y="0" width="40" height="40" rx="4" fill="#0ea5e9"/>
      <rect x="0" y="50" width="40" height="40" rx="4" fill="#0ea5e9"/>
      <rect x="50" y="50" width="40" height="40" rx="4" fill="#0ea5e9"/>
      <rect x="100" y="50" width="40" height="40" rx="4" fill="#0ea5e9"/>
    </g>
  </g>
  
  <!-- Geometric accents -->
  <circle cx="1600" cy="400" r="90" fill="rgba(14,165,233,0.06)" opacity="0.8"/>
  <circle cx="300" cy="700" r="70" fill="rgba(14,165,233,0.05)" opacity="0.6"/>
  <polygon points="1400,800 1500,900 1300,900" fill="rgba(14,165,233,0.04)" opacity="0.5"/>
  
  <!-- Creative elements -->
  <path d="M 100 500 Q 200 450 300 500 T 500 500" stroke="rgba(14,165,233,0.15)" stroke-width="3" fill="none" opacity="0.6"/>
  <rect x="1500" y="700" width="70" height="70" rx="10" fill="rgba(14,165,233,0.08)" opacity="0.4" transform="rotate(45 1535 735)"/>
</svg>